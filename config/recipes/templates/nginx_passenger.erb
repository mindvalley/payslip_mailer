server {
  listen 80;
  server_name <%= server_name %>;
  root <%= current_path %>/public;
  rails_env <%= stage %>;
  passenger_enabled on;
  passenger_min_instances 1;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
}
